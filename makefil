CXX = g++

CXXFLAGS = -std=c++17 -Wall -O3

EXECUTABLE = main

SOURCES = main.cpp heuristica.cpp algoritmos.cpp

OBJECTS = $(SOURCES:.cpp=.o)

all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $(EXECUTABLE) $(OBJECTS)

%.o: %.cpp heuristica.hpp algoritmos.hpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

.PHONY: clean
clean:
	rm -f $(EXECUTABLE) $(OBJECTS)

